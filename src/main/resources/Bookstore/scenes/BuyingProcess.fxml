<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Bookstore.scenes.BuyingProcess" spacing="10" alignment="CENTER">

    <TableView fx:id="bookTable" prefWidth="600">
        <columns>
            <TableColumn fx:id="categoryColumn" text="Category" />
            <TableColumn fx:id="conditionColumn" text="Condition" />
            <TableColumn fx:id="originalPriceColumn" text="Original Price" />
            <TableColumn fx:id="newPriceColumn" text="New Price" />
        </columns>
    </TableView>

</VBox>