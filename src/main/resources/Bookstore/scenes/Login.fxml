<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" spacing="20" fx:controller="Bookstore.scenes.Login">
	<Label text="Sun Devil Bookstore" style="-fx-font-size: 24; -fx-font-weight: bold;" />
    <TextField fx:id="usernameField" promptText="Enter Username" maxWidth="250"/>
    <PasswordField fx:id="passwordField" promptText="Enter Password" maxWidth="250"/>
    <Button text="Login" onAction="#handleLogin" />
</VBox>