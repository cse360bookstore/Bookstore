<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Polygon?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<VBox fx:id="container"
      alignment="CENTER"
      spacing="20.0"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="Bookstore.scenes.seller.SellerInventory"
      style="-fx-padding: 20; -fx-background-color: #f9f9f9;">
    <TableView fx:id="bookTableView" maxWidth="800" maxHeight="400">
        <columns>
            <TableColumn fx:id="titleColumn" text="Title" prefWidth="150"/>
            <TableColumn fx:id="authorColumn" text="Author" prefWidth="150"/>
            <TableColumn fx:id="categoryColumn" text="Category" prefWidth="100"/>
            <TableColumn fx:id="conditionColumn" text="Condition" prefWidth="100"/>
            <TableColumn fx:id="priceColumn" text="Price"/>
            <TableColumn fx:id="listedAtColumn" text="Listed At" prefWidth="150"/>
            <TableColumn fx:id="publishYearColumn" text="publishYear" prefWidth="150"/>
            <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
        </columns>
    </TableView>
</VBox>
